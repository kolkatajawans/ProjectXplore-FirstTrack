generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  active         Boolean  @default(true)
  refreshToken   String?
  avatarUrl      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  roomsAsAuthor  Room[]   @relation("AuthorRooms")
  roomsAsMember  RoomMember[]
}

model Room {
  id             Int      @id @default(autoincrement())
  authorId       Int
  author         User    @relation("AuthorRooms", fields: [authorId], references: [id])
  members        RoomMember[]
  projects       Project[] 
}

model RoomMember {
  roomId         Int
  userId         Int
  room           Room    @relation(fields: [roomId], references: [id])
  user           User    @relation(fields: [userId], references: [id])
  @@id([roomId, userId])
}

model Project {
  id             Int      @id @default(autoincrement()) 
  authorId       Int
  roomId         Int?     
  room           Room?    @relation(fields: [roomId], references: [id]) // Add this relation
  name           String
  description    String
  links          Link[]   
  images         Image[]  
}

model Link {
  id             Int      @id @default(autoincrement())
  url            String   
  project        Project  @relation(fields: [id], references: [id]) 
}

model Image {
  id             Int      @id @default(autoincrement())
  url            String
  project        Project  @relation(fields: [id], references: [id]) 
}